{
    "name": "had-technical-assignment",
    "version": "1.0.0",
    "description": "Node.js REST API for managing gateways and peripheral devices",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:docker": "bash ./scripts/init-db.sh && tsx watch src/index.ts",
        "build": "rm -rf dist && tsc",
        "clean": "rm -rf dist && rm -rf node_modules",
        "start": "bash ./scripts/init-db.sh && node dist/index.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "docker:up": "docker compose -f docker-compose.yml up -d --build && pnpm docker:logs",
        "docker:down": "docker compose -f docker-compose.yml down",
        "docker:logs": "docker logs -f had-technical-assignment-api-1",
        "docker:restart": "docker compose -f docker-compose.yml down && pnpm docker:up",
        "docker:dev": "docker compose -f docker-compose.yml up --build",
        "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "express",
        "postgresql",
        "rest-api"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.33.0",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "http-status": "^2.1.0",
        "morgan": "^1.10.0",
        "postgres": "^3.4.3",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "tsyringe": "^4.10.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.0",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vitest/coverage-v8": "^1.0.4",
        "drizzle-kit": "^0.24.0",
        "eslint": "^8.55.0",
        "lefthook": "^1.5.5",
        "prettier": "^3.1.0",
        "tsx": "^4.6.0",
        "typescript": "^5.3.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9.0.0"
    },
    "packageManager": "pnpm@9.0.0"
}